# Copy this file to terraform.tfvars and fill in your values

# Hetzner Cloud API token
# Get from: https://console.hetzner.cloud/projects -> Security -> API Tokens
hetzner_token = "your_hetzner_token_here"

# Cloudflare API token
# Get from: https://dash.cloudflare.com/profile/api-tokens
# Needs Zone:Edit permissions for your domain
cloudflare_api_token = "your_cloudflare_token_here"

# Cloudflare zone ID for your domain
# Get from: Cloudflare Dashboard -> Your Domain -> Zone ID (right sidebar)
cloudflare_zone_id = "your_cloudflare_zone_id_here"

# Your domain name
domain = "your-domain.com"

# These will be set automatically by the justfile
# project_name = "my-project"
# deployment_id = "a1b2c3d"
# image_tag = "ghcr.io/YOUR_GITHUB_USERNAME/my-project:a1b2c3d"
